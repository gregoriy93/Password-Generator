<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checkbox_light_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/control_margin"
            android:text="Light Theme" />

        <CheckBox
            android:id="@+id/checkbox_dialog_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/control_margin"
            android:checked="true"
            android:text="Dialog Theme" />

        <CheckBox
            android:id="@+id/checkbox_stealth_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/control_margin"
            android:text="Stealth Mode" />

        <TextView
            android:id="@+id/text_min_wired_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/control_margin"
            android:text="@string/pmsg_min_wired_dots"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <SeekBar
            android:id="@+id/seek_bar_min_wired_dots"
            android:layout_width="@dimen/progress_bar_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/control_margin"
            android:max="9"
            android:progress="4" />

        <Button
            android:id="@+id/button_create_lockpattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/control_margin"
            android:text="Generate passwordâ€¦" />
    </LinearLayout>

</ScrollView>